{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
        "target": "es5",
        "baseUrl": ".",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}